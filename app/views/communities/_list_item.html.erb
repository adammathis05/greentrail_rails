<div class="border border-gray-200 rounded-lg p-4 shadow-sm bg-white">
  <h3 class="text-xl font-semibold text-gray-800"><%= community.name %></h3>
  <p class="text-sm text-gray-600">
    <%= [community.town&.name, community.town&.province&.name, community.town&.province&.country&.name].compact.join(", ") %>
  </p>
  <div class="mt-2">
    <%= link_to "View Community", community_path(community), class: "text-green-600 hover:underline text-sm font-medium" %>
  </div>
</div>