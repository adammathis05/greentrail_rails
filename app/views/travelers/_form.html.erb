<%= render 'shared/form_card' do %>
  <% if traveler.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-800 rounded">
      <h2 class="font-bold mb-2">Please fix the following errors:</h2>
      <ul class="list-disc ml-5">
        <% traveler.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="text-2xl font-bold text-gray-800 text-center">Edit Your Profile</h2>

  <%= form_with model: traveler, local: true, multipart: true do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :first, "First Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :last, "Last Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :birthdate, class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :birthdate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :home_city, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :home_city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :home_country, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :home_country, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :profile_picture, class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :profile_picture, class: "mt-1 block w-full text-sm text-gray-600" %>
      </div>

      <% if traveler.profile_picture.attached? %>
        <div class="mt-3">
          <p class="text-sm text-gray-600 mb-1">Current Photo:</p>
          <%= image_tag traveler.profile_picture.variant(resize_to_limit: [150, 150]), class: "rounded shadow" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Save Changes", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md shadow" %>
      </div>
    </div>
  <% end %>
<% end %>