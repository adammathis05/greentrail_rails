<%= form_with(model: traveler, local: true, html: { multipart: true }) do |form| %>
  <% if traveler.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-800 rounded">
      <h2 class="font-bold mb-2">Please fix the following errors:</h2>
      <ul class="list-disc ml-5">
        <% traveler.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :first, class: "block font-semibold" %>
    <%= form.text_field :first, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :last, class: "block font-semibold" %>
    <%= form.text_field :last, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block font-semibold" %>
    <%= form.email_field :email, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :birthdate, class: "block font-semibold" %>
    <%= form.date_field :birthdate, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :home_city, class: "block font-semibold" %>
    <%= form.text_field :home_city, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :home_country, class: "block font-semibold" %>
    <%= form.text_field :home_country, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <div class="mb-6">
    <%= form.label :profile_picture, class: "block font-semibold mb-1" %>
    <%= form.file_field :profile_picture, class: "w-full border px-3 py-2 rounded" %>

    <% if traveler.profile_picture.attached? %>
      <div class="mt-3">
        <p class="text-sm text-gray-600 mb-1">Current Photo:</p>
        <%= image_tag traveler.profile_picture.variant(resize_to_limit: [150, 150]),
                      class: "rounded shadow" %>
      </div>
    <% end %>
  </div>

  <%= form.submit traveler.new_record? ? "Create Traveler" : "Update Traveler",
      class: "bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition" %>
<% end %>