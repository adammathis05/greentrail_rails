<h2 class="text-2xl font-semibold mb-4">Welcome, <%= @traveler.full_name %>!</h2>

<p>Email: <%= @traveler.email %></p>

<%= link_to "Edit Profile", edit_traveler_path(@traveler), class: "text-blue-600 underline" %>

<%= link_to 'Delete Account',
            traveler_path(@traveler),
            method: :delete,
            data: { confirm: "Are you sure you want to delete your account?" },
            class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition ml-4" %>

