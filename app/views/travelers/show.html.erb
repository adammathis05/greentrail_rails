<h2 class="text-2xl font-semibold mb-4">Welcome, <%= @traveler.first %>!</h2>

<p>Email: <%= @traveler.email %></p>

<div class="max-w-3xl mx-auto py-8 px-4">
  <div class="flex items-center gap-6 mb-6">
    <% if @traveler.profile_image_url.present? %>
      <img src="<%= @traveler.profile_image_url %>" alt="Profile Picture" class="w-32 h-32 rounded-full object-cover shadow">
    <% else %>
      <div class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 shadow">
        <span class="text-xl font-semibold">No Photo</span>
      </div>
    <% end %>
    <div>
      <h1 class="text-3xl font-bold"><%= @traveler.email %></h1>
      <p class="text-gray-600">
        <%= @traveler.home_city %>, <%= @traveler.home_country %>
      </p>
      <p class="text-sm text-gray-500">Birthdate: <%= @traveler.birthdate&.strftime("%B %d, %Y") || "Not provided" %></p>
    </div>
  </div>
</div>

<%= link_to "Edit Profile", edit_traveler_path(@traveler), class: "text-blue-600 underline" %>

<%= link_to 'Delete Account',
            traveler_path(@traveler),
            method: :delete,
            data: { confirm: "Are you sure you want to delete your account?" },
            class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition ml-4" %>

