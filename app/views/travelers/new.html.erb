<h2 class="text-2xl font-semibold mb-4">Sign Up</h2>

<%= form_with model: @traveler, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :first, class: "block font-medium" %>
    <%= f.text_field :first, class: "border p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :last, class: "block font-medium" %>
    <%= f.text_field :last, class: "border p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-medium" %>
    <%= f.email_field :email, class: "border p-2 w-full" %>
  </div>

  <div>
    <%= f.submit "Create Account", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
  </div>
<% end %>
