<div class="bg-gray-100 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-md p-6 space-y-8">

    <% if traveler_signed_in? %>
      <h2 class="text-2xl font-bold text-gray-800">Welcome back, <%= current_traveler.first %>!</h2>

      <!-- Featured Community -->
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Featured Community</h3>
        <%= render partial: "communities/mini_card", locals: { community: @featured_community } %>
        <%= link_to "Learn More", community_path(@featured_community), class: "mt-3 inline-block text-blue-600 hover:underline" %>
      </div>

      <!-- Explore Communities Search -->
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Explore New Communities</h3>
        <%= render "shared/community_search" %>
        
      </div>

      <div>
        <%= link_to "Go to My Dashboard", traveler_dashboard_path, class: "inline-block bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition" %>
      </div>

    <% else %>
      <!-- Guest View -->

      <h2 class="text-2xl font-bold text-gray-800">Welcome to Greentrail</h2>
      <p class="text-gray-600">Join our community of travelers and discover hidden gems across the globe.</p>

      <!-- Featured Community -->
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Featured Community</h3>
        <%= render partial: "communities/mini_card", locals: { community: @featured_community } %>
      </div>

      <!-- Explore Communities Search -->
      <div>
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Explore New Communities</h3>
        <%= render "shared/community_search" %>
        
      </div>
    <% end %>
  </div>
</div>