<div class="bg-white rounded-lg shadow p-4 border border-gray-200 max-w-sm w-full">
  <h3 class="text-xl font-bold text-gray-800 mb-2"><%= provider.name %></h3>
  <p class="text-sm text-gray-600 mb-2"><%= provider.description %></p>

  <% if provider.site&.street_address.present? && provider.map_link.present? %>
    <a href="<%= provider.map_link %>"
      target="_blank"
      class="flex items-center text-blue-600 hover:underline text-sm mt-2">
      <!-- Heroicon: map-pin (outline) -->
      <svg xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-4 h-4 mr-1 text-blue-500">
        <path stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
      </svg>
      <%= provider.site.street_address %>
    </a>
  <% end %> 
</div>