<h2 class="text-2xl font-bold text-gray-800 mb-6">Edit Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<!-- First Name -->
  <div>
    <%= f.label :first, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :first, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
  </div>

<!-- Last Name -->
  <div>
    <%= f.label :last, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :last, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
  </div>

<!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
  </div>

<!-- Password -->
  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
    <p class="text-sm text-gray-500 mt-1">Leave blank if you don't want to change it</p>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
  </div>

  <div>
    <%= f.label :current_password, "Current password", class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
    <p class="text-sm text-gray-500 mt-1">We need your current password to confirm your changes</p>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Update", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded" %>

    <%= link_to "Cancel my account", registration_path(resource_name), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "text-sm text-red-600 hover:text-red-800" %>
  </div>
<% end %>

<hr class="my-8">

<%= link_to "Back", root_path, class: "text-sm text-blue-600 hover:underline" %>