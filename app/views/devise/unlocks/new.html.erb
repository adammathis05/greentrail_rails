<h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Resend Unlock Instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.submit "Send Unlock Instructions",
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
  </div>
<% end %>

<div class="mt-6 text-center text-sm text-gray-600">
  <%= link_to "Back to Sign In", new_session_path(resource_name),
        class: "text-blue-600 hover:underline" %>
</div>